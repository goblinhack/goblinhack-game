SHELL = /bin/sh

srcdir = .
prefix = /usr/local

TOPDIR = /home/zod/goblinhack

CC = g++
RANLIB = ranlib
AR = ar
LN = ln -sf
RM = rm -f
RMDIR = rm -rf
MKDIR = mkdir -p
CP = cp -f
EX = chmod +x

#
# How to highlight
#
PRINT = $(TOPDIR)/build/sh/print

#
# Echo the current build dir
#
CURRENT_DIRECTORY = `pwd`

#
# How to report the make progress
#
VERBOSE_CD = echo

#
# Nice terminal colour effects
#
include $(TOPDIR)/build/sh/colour.sh

#
# mingw doesn't seem to add in local/include; hack it in
#
INCLUDE +=  -I/usr/local/include -I$(TOPDIR)/src/include

#
# -rdynamic is for traceback function names
# -O3 enables -finline-functions
#
CFLAGS = -g -O2 -Wall -DMACOSX  -I/Library/Frameworks/SDL.framework/Headers  -I/Library/Frameworks/SDL.framework/Versions/A/Headers  -I/Library/Frameworks/SDL_image.framework/Headers  -I/Library/Frameworks/SDL_image.framework/Versions/A/Headers  -I/Library/Frameworks/SDL_mixer.framework/Headers  -I/Library/Frameworks/SDL_mixer.framework/Versions/A/Headers  -I/Library/Frameworks/OpenGL.framework/Headers  -I/System/Library/Frameworks/SDL.framework/Headers  -I/System/Library/Frameworks/SDL.framework/Versions/A/Headers  -I/System/Library/Frameworks/SDL_image.framework/Headers  -I/System/Library/Frameworks/SDL_image.framework/Versions/A/Headers  -I/System/Library/Frameworks/SDL_mixer.framework/Headers  -I/System/Library/Frameworks/SDL_mixer.framework/Versions/A/Headers  -I/System/Library/Frameworks/OpenGL.framework/Headers  -I/usr/include/SDL -D_GNU_SOURCE=1 -D_REENTRANT -O3 

CFLAGS += -DGH_INSTALLED_DIR='"$(prefix)/games/ghack"' 

#
# For gprof
#
#CFLAGS += -pg
#CFLAGS += -std=c++0x

.SUFFIXES: .cpp

.cpp.o:
	$(CC) $(CFLAGS) $(INCLUDE) -c -o $*.o $<

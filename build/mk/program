include $(TOP)/build/mk/rules

$(TARGET): $(OBJS) $(OLIBS)
	$(CC) $(CFLAGS) $(OBJS) $(LIBS)  -L/usr/local/lib -lSDLmain -lSDL -Wl,-framework,Cocoa -lz   -L/System/Library/Frameworks/OpenGL.framework/Libraries -lGL -lGLU -framework SDL -framework SDL_image -framework SDL_mixer -framework OpenGL -o $(TARGET)
	echo $(TARGET).exe

install all:: $(TARGET)

clean::
	$(RM) $(OBJS)
	$(RM) stderr.txt
	$(RM) stdout.txt
	$(RM) Makefile.bak
	find . -name *.o

clobber::
	$(RM) $(OBJS) $(TARGET)
	$(RM) stderr.txt
	$(RM) stdout.txt
	$(RM) Makefile.bak
	find . -name *.o
